{
  "compilerOptions": {
   
    "outDir": "dist",
    "rootDir": "src",

    
    "target": "ES2022",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["es2022"],

    
    "strict": true,
    "noImplicitAny": false,
    "skipLibCheck": true,

    
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,

    
    "types":  ["node", "jest"],

    
    "sourceMap": true
  },
  "include": ["src/**/*","src/tests"],
  "exclude": ["node_modules", "dist"]
}
